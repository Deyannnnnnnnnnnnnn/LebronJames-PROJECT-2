<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lebron Джеймс</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-purple">
            <div class="container-fluid">
                <a class="navbar-brand text-gold" asp-controller="Home" asp-action="Index">Леброн Джеймс</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link text-gold" asp-controller="Home" asp-action="Index">Начало</a></li>
                        <li class="nav-item"><a class="nav-link text-gold" asp-controller="Home" asp-action="Gallery">Галерия</a></li>
                        <li class="nav-item"><a class="nav-link text-gold" asp-controller="Home" asp-action="Downloads">Изтегляния</a></li>
                        <li class="nav-item"><a class="nav-link text-gold" asp-controller="Comments" asp-action="Index">Коментари</a></li>
                        <li class="nav-item"><a class="nav-link text-gold" asp-controller="Home" asp-action="Contact">Контакт</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top text-center py-3 bg-purple text-gold">
        <div>&copy; 2025 Леброн Джеймс - <a asp-controller="Home" asp-action="Privacy">Privacy</a></div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
